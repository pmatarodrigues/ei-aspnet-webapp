@model MusicRepo.Models.Album

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ano)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ano)
        </dd>

        <dt>
            @Html.Label("Artista")
            <!--
            @Html.DisplayNameFor(model => model.Artista1.Nome)
                -->
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Artista1.Nome)
        </dd>

        <dt>
            @Html.Label("Editora")
            <!--
            @Html.DisplayNameFor(model => model.Editora1.Nome)
                -->
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Editora1.Nome)
        </dd>

    </dl>

    <table class="table">
        <tr>
            <th>Musica</th>
            <th>Duracao</th>
        </tr>
        @foreach (var item in Model.Musicas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duracao)
                </td>
            </tr>
        }
    </table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.idAlbum }) |
