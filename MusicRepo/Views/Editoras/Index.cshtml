@model IEnumerable<MusicRepo.Models.Editora>

@{
    ViewBag.Title = "Editoras";
}

<h2>Editoras</h2>

<p>
    <a class="btn btn-primary" href="/Editoras/Create">
        <img src="~/Imagens/mais.png" alt="addIcon" align="middle" />
        Adicionar
    </a>
</p>

@using (Html.BeginForm())
{
    <p>
        Nome de Editora: @Html.TextBox("SearchString")
        <input type="submit" value="Pesquisar" />
    </p>
}

<table class="table" style="background-color:#EEEEEE">
    <tr>
        <th>
            @Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NomeSortParm })
        </th>
        <th>
            @Html.ActionLink("Fundacao", "Index", new { sortOrder = ViewBag.FundacaoSortParm })
        </th>
        <th>
            @Html.ActionLink("Localidade", "Index", new { sortOrder = ViewBag.LocalidadeSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fundacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidade)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.idEditora }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.idEditora }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.idEditora })
            </td>
        </tr>
    }

</table>
