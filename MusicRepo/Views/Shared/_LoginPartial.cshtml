@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a type="button" class="btn btn-success" href="/Manage">
                    A Minha Conta
                </a>
            </li>
            <li>
            <a type="button" class="btn btn-success" href="javascript:document.getElementById('logoutForm').submit()">
                Terminar Sessão</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a type="button" class="btn btn-success" href="/Account/Register">
                Registar
            </a>        </li>
        <li>
            <a type="button" class="btn btn-success" href="/Account/Login">
                Iniciar Sessão
            </a>        
        </li>
    </ul>
}